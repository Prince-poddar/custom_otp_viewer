<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_enter_verification_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="@string/enter_verification_code"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_enter_six_digit_verification_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/please_enter_the_6_digit_code_we_sent_to_your_registered_email_address"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_enter_verification_code" />

    <TextView
        android:id="@+id/tv_verification_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="@string/verification_code"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/ll_otp"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/ll_otp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:weightSum="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/et1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:autofillHints=""
            android:cursorVisible="true"
            android:digits="1234567890"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:ems="2"
            android:selectAllOnFocus="true"
            android:textCursorDrawable="@drawable/bg_cursor"
            android:textIsSelectable="false"
            android:textStyle="bold" />

        <EditText
            android:selectAllOnFocus="true"
            android:id="@+id/et2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:cursorVisible="true"
            android:digits="1234567890"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:textCursorDrawable="@drawable/bg_cursor"
            android:textIsSelectable="false"

            android:textStyle="bold" />

        <EditText
            android:id="@+id/et3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:cursorVisible="true"
            android:digits="1234567890"
            android:gravity="center"
            android:inputType="number"
            android:maxEms="1"
            android:selectAllOnFocus="true"
            android:maxLength="2"
            android:textCursorDrawable="@drawable/bg_cursor"
            android:textIsSelectable="false"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et4"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:cursorVisible="true"
            android:digits="1234567890"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:selectAllOnFocus="true"
            android:textCursorDrawable="@drawable/bg_cursor"
            android:textIsSelectable="false"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et5"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:cursorVisible="true"
            android:digits="1234567890"
            android:gravity="center"
            android:inputType="number"
            android:maxEms="1"
            android:selectAllOnFocus="true"
            android:maxLength="2"
            android:textCursorDrawable="@drawable/bg_cursor"
            android:textIsSelectable="false"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et6"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:cursorVisible="true"
            android:digits="1234567890"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:selectAllOnFocus="true"
            android:textCursorDrawable="@drawable/bg_cursor"
            android:textIsSelectable="false"
            android:textStyle="bold" />


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_verify"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:text="Verify"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_otp" />


</androidx.constraintlayout.widget.ConstraintLayout>